                        <div class="col ">
                            {{form_label(form.image)}}
                            {{form_widget(form.image)}} 
                        </div>
                        
                    </div>
                   

                <div class="text-center">
                    <button type="submit" class="btn btn-brown"><i class="fa fa-check" aria-hidden="true"></i> Enregistrer</button>
                    <a href="{{path('admin_menus_list')}}" class="btn btn-light">Retour</a>
                </div>
                {{form_end(form)}}
