{% extends 'admin/base.html.twig' %}

{% block title %}{{title}}{% endblock %}

{% block body %}
    <section class="container-fluid">
        
        <div class="row justify-content-center">
          
            <div class="col-md-8 jumbotron mt-2">
                <h2 class="brown mb-2">Modération du commentaire n°{{comment.id}}</h2>
                <hr class="brown">

                {{form_start(form)}}

                <div class="row">
                    {{form_widget(form)}}
                <div class="text-center">
                    <button type="submit" class="btn btn-brown"><i class="fa fa-check" aria-hidden="true"></i> Enregistrer</button>
                    <a href="{{path('admin_comments_list')}}" class="btn btn-light">Retour</a>
                </div>
                {{form_end(form)}}
            </div>
        </div>

    </section>

{% endblock %}