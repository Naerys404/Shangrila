{% extends 'admin/base.html.twig' %}

{% block title %}{{title}}{% endblock %}

{% block body %}
    <section class="container-fluid">
        <div class="row justify-content-center">
          
            <div class="col-md-8 jumbotron mt-2">
               <h2 class="brown mb-2">{{title}}</h2>
                <hr class="brown">
                <table class="table table-hover">
                    <thead class="text-center table-header">
                        <th scope="col">Id</th>
                        <th scope="col">Client</th>
                        <th scope="col">Date</th>
                        <th scope="col">Horaire réservé</th>
                        <th scope="col">Invités</th>
                        <th scope="col">Editer</th>
                        <th scope="col">Supprimer</th>
                    </thead>
                    <tbody>
                    {% for tableBooking in pagination.data %}
                    <tr class="text-center">
                        <td>{{tableBooking.id}}</td>
                        <td>{{tableBooking.booker.fullName}}</td>
                        <td>{{tableBooking.date|date("d/m/Y")}}</td>
                        <td>{{tableBooking.timeSheet}}</td>
                        <td>{{tableBooking.guests}}</td>
                        <td class="col-1">
                            <a href="{{path('admin_tablebooking_edit', {'id': tableBooking.id })}}" class="btn btn-brown btn-sm"><i class="fas fa-edit" aria-hidden="true"></i></a>
                        </td>
                        <td>
                            <a href="{{path('admin_tablebooking_delete', {'id': tableBooking.id })}}" class="btn btn-danger btn-sm"> <i class="fa fa-trash" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                    {% endfor %}
                    </tbody>
            </table>

                {{pagination.display()}}
            </div>
        </div>
      
                    
    </section>

{% endblock %}
