{% extends 'base.html.twig' %}

{% block title %}{{title}}{% endblock %}

{% block body %}

  {% include 'inc/nav-header.html.twig' %}
  {% include './inc/flashs.html.twig' %}
  
    <section class="container-fluid about">
     
        <div class="row justify-content-center">
          
            <div class="jumbotron col-md-6">
            <div class="d-flex justify-content-between align-items-center">
                    <h1 class="h2">Confirmation de réservation</h1>
                    <img src="{{ asset('img/logo.png') }}" alt="logo">
            </div>
                <hr class="brown">
                <div class="text-center">
                    <h4 class="mb-4">Votre réservation a bien été enregistrée !</h4>
                    <p>Vous avez réservé une table pour <strong>{{tableBooking.guests}}</strong>{% if tableBooking.guests == 1 %} personne. {% else %} personnes. {% endif %}<br>
                    Nous aurons le plaisir de vous accueillir le <strong>{{tableBooking.date|date("d/m/Y")}}</strong> à <strong>{{tableBooking.timeSheet}}</strong>.</p>
                    
                    <a href="{{path('homePage')}}" class="btn btn-brown">Retour à l'accueil</a>
                    

            </div>            
        </div>
    
    </section>

{% endblock %}