{% extends 'base.html.twig' %}

{% block title %}{{title}}{% endblock %}

{% block body %}
{% include 'inc/nav-header.html.twig' %}
   
    <section class="container-fluid showBlog">
    {% include './inc/flashs.html.twig' %}
     
        <div class="row justify-content-center">
          
            <div class="col-md-10 jumbotron">
                <h1 class="h2 mb-1">{{blog.title}}</h1>
                <p class="card-text">Edité le {{blog.createdAt|date("d-m-Y")}} à {{blog.createdAt|date("H:i")}} par {{blog.author}}</p>
                 <article>
                    <div class="text-center d-flex blogContent">
                        <div class="col-md-6">
                            <img src="{{blog.image}}" class="card-img-top" alt="{{blog.title}}">
                        </div>
                        <div class="flex-column justify-content-around align-items-center">      
                                <p class="card-text pt-4 px-4 text-start">{{blog.content|raw}}</p>
                 
                                <a href="{{path('homeBlog')}}" class="btn btn-brown mb-3">Retour</a>
                        </div>
                        
                        
                </article>
                </div>
            </div>            
    </div>
    
    </section>

{% endblock %}