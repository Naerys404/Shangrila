{% extends 'base.html.twig' %}

{% block title %}{{title}}{% endblock %}

{% block body %}
{% include 'inc/nav-header.html.twig' %}
   
    <section class="container-fluid showBlog">
    {% include './inc/flashs.html.twig' %}
     
        <div class="row justify-content-center">
          
            <div class="col-md-10 jumbotron">
                <h1 class="h2 mb-4">{{blog.title}}</h1>
                <p class="card-text">Edité le {{blog.createdAt|date("d-m-Y")}} à {{blog.createdAt|date("H:i")}} par {{blog.author}}</p>
                <hr class="brown">
                 <article>
                    <div class="text-center row">
                        <div class="col-md-6">
                            <img src="{{blog.image}}" class="card-img-top" alt="{{blog.title}}">
                        </div>
                        <div class="col-md-6">      
                            <p class="card-text mt-3">{{blog.content}}</p>
                            <a href="{{path('homeBlog')}}" class="btn btn-brown">Retour</a>
                        </div>
                        
                </article>
                </div>
            </div>            
    </div>
    
    </section>

{% endblock %}