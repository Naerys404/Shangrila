{% extends 'base.html.twig' %}

{% block title %}{{title}}{% endblock %}

{% block body %}
    {% include 'inc/nav-header.html.twig' %}
   
    <section class="container-fluid showMenu">
    {% include './inc/flashs.html.twig' %}
     
        <div class="row justify-content-center">
          
            <div class="col-md-8 jumbotron">
            
                    <h1 class="h2 mb-2">Formule "{{menu.title}}"</h1>
                     <p class="card-text">{{menu.description}}</p>
                
                <hr class="brown">
                <div class="row">
                    <div class="mt-4 col-md-5 mx-auto">
                        <img src="{{menu.image}}" class="card-img-top" alt="{{menu.title}}">         
                    </div>
               
                    <div class="col-md-5 mx-auto">
                    
                    <!-- affiche les plats du menu selectionné -->
                        <ul class="list-group list-group-flush">
                                {% for meal in menu.meals %}
                                    <li class="list-group-item">{{meal.title}}<p><small><i>{{meal.description}}</i></small></p></li> 
                                {% endfor %}                
                            </ul>

                        <div class="d-flex justify-content-center">
                            <h3><strong>{{menu.price}}<i class="fa fa-eur" aria-hidden="true"></i></strong></h3>
                        </div>
                        <hr class="brown">
                        {% if app.user %}
                        <div class="text-center">
                                <a href="#" class="btn btn-brown btn-lg">Commander</a>
                        </div>
                        {% else %}
                            <div class="mt-4 text-center">
                                <p class="brow"><strong>Vous devez être connecté pour commander.</strong></p>
                                <a href="{{path('account_login')}}" class="card-link btn btn-brown">Se connecter</a>         
                            </div>
                        {% endif %}
                      
                    </div>
                    <div class='d-flex justify-content-end'>
                   <a href="{{path('homeMenu')}}" class="btn btn-outline-brown m-1">Retour aux menus</a>
                   </div>
                </div>

                
            </div>            
    </div>
    
    </section>
{% endblock %}

