{% extends 'base.html.twig' %}

{% block title %}{{title}}{% endblock %}

{% block body %}

    {% include 'inc/nav-header.html.twig' %}
   
    <section class="container-fluid showMenu">
    {% include './inc/flashs.html.twig' %}
     
        <div class="row justify-content-center">
          
            <div class="col-md-8 jumbotron">
                <div class="row">
                    <div class="col-md-11">
                        <h1 class="h2 mb-2">Paiement accepté ! Votre commande est en cours ...</h1>
                    </div>
                    <div class="col-md-1">
                         <img src="{{asset('img/cookIcon.png')}}" alt="cooking" class="img-fluid">
                    </div>
                </div>

                
                <hr class="brown">
                <div class="row">
                    <div class="mt-4 col-md-5 mx-auto">
                        <img src="{{menu.image}}" class="card-img-top" alt="{{menu.title}}"> 
                    </div>
               
                    <div class="col-md-5 mx-auto">
                    <!-- Détail de la commande -->
                
                    <h4>Formule {{menu.title}}</h4>
                    <hr class="brown">
                      <ul class="list-group list-group-flush">
                            {% for meal in menu.meals %}
                                <li class="list-group-item">{{meal.title}}<p><small><i>{{meal.description}}</i></small></p></li> 
                            {% endfor %}
                                <li class="list-group-item">Prix de la commande : {{menu.price}} euros</li>                            
                                <li class="list-group-item">Référence n° ..</li>
                                <li class="list-group-item">Commandé le: ..</li>

                        </ul>
                     
                    
                    </div>
                    <div class='d-flex justify-content-end'>
                   <a href="{{path('homeMenu')}}" class="btn btn-outline-brown m-1">Retour aux menus</a>
                   </div>
                </div>

                
            </div>            
    </div>
    
    </section>
{% endblock %}



